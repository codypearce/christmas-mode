{
  "name": "christmas-mode",
  "version": "1.0.1",
  "description": "Add festive Christmas decorations to any website with a single line of code",
  "main": "dist/christmas-mode.cjs.js",
  "module": "dist/christmas-mode.esm.js",
  "browser": "dist/christmas-mode.umd.js",
  "types": "dist/christmas-mode.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
        "lint": "eslint src/**/*.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "christmas",
    "holiday",
    "decorations",
    "snow",
    "festive",
    "xmas",
    "winter",
    "theme"
  ],
  "author": "Cody Pearce <codyapearce@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codyapearce/christmas-mode.git"
  },
  "homepage": "https://github.com/codyapearce/christmas-mode#readme",
  "bugs": {
    "url": "https://github.com/codyapearce/christmas-mode/issues"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
